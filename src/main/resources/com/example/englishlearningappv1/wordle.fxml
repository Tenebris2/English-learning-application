    <GridPane fx:id="gridPane" alignment="CENTER" hgap="5" layoutX="376.0" layoutY="87.0" onKeyPressed="#onKeyPressed" prefHeight="282.0" prefWidth="327.0" vgap="5">
        <BorderPane.margin>
            <Insets bottom="15.0" top="15.0" />
        </BorderPane.margin>
    </GridPane>
    <VBox layoutX="290.0" layoutY="522.0" prefHeight="190.0" prefWidth="500.0">
        <GridPane fx:id="keyboardRow1" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
        </GridPane>

        <GridPane fx:id="keyboardRow2" alignment="BOTTOM_CENTER" hgap="4" vgap="2" />

        <GridPane fx:id="keyboardRow3" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
        </GridPane>
    </VBox>

    <Label alignment="CENTER" layoutX="459.0" layoutY="13.0" prefHeight="64.0" prefWidth="182.0" text="WORDLE" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
