        <font>
            <Font size="18.0" />
        </font>
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@image/restart.png" />
                </image>
            </ImageView>
        </graphic>
