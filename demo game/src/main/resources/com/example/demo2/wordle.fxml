<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="715" prefWidth="500" styleClass="main-screen" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.MainController">

    <stylesheets>
        <URL value="@wordle.css" />
    </stylesheets>

    <top>
        <VBox alignment="TOP_CENTER" minWidth="480.0">

            <HBox alignment="CENTER_RIGHT">
                <Pane>
                    <padding>
                        <Insets right="10" />
                    </padding>
                </Pane>
                <HBox fx:id="titleHBox" alignment="CENTER" prefHeight="40.0">
                    <padding>
                        <Insets right="100" />
                    </padding>
                </HBox>
                <Pane>
                    <ImageView fx:id="restartIcon" fitHeight="40" fitWidth="40" onMouseClicked="#restart"/>
                </Pane>

                <padding>
                    <Insets right="10" />
                </padding>
            </HBox>

            <Line endX="2000" stroke="#b8b8b8" />
        </VBox>
    </top>

    <center>
        <GridPane fx:id="gridPane" alignment="CENTER" hgap="5" onKeyPressed="#onKeyPressed" vgap="5">
            <BorderPane.margin>
                <Insets bottom="15.0" top="15.0" />
            </BorderPane.margin>
        </GridPane>
    </center>

    <bottom>
        <VBox>
            <GridPane fx:id="keyboardRow1" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                <padding>
                    <Insets top="10.0" />
                </padding>
            </GridPane>

            <GridPane fx:id="keyboardRow2" alignment="BOTTOM_CENTER" hgap="4" vgap="2" />

            <GridPane fx:id="keyboardRow3" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </GridPane>
        </VBox>
    </bottom>

</BorderPane>
